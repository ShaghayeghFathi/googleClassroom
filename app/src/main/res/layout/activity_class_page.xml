<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ClassPage"
    android:orientation="vertical"
    android:background="@drawable/mainbg">
    <android.support.v7.widget.Toolbar
        android:id="@+id/classToolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/toolbarColor"
        android:theme="@style/Base.ThemeOverlay.AppCompat.ActionBar"
        app:title="Google Classroom"></android.support.v7.widget.Toolbar>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/classWork_btn"
        android:onClick="clickClassWork"
        android:text="ClassWork"
        android:textSize="12sp"
        android:layout_marginTop="150dp"
        android:layout_gravity="center"
        android:background="@color/itemColor"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/people_btn"
        android:onClick="clickPeople"
        android:text="People"
        android:textSize="12sp"
        android:layout_marginTop="100dp"
        android:layout_gravity="center"
        android:background="@color/itemColor"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>