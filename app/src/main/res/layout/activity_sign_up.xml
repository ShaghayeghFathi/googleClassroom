<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SignUpActivity">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign Up"
        android:textSize="20sp"
        android:id="@+id/signUp_tv"
        android:layout_marginTop="70dp"
        android:layout_gravity="center"/>
    <EditText
        android:id="@+id/username_signup_et"
        android:hint="Username"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:paddingRight="16dp"
        android:paddingLeft="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="clickUsername"
        />
    <EditText
        android:id="@+id/password_signup_et"
        android:hint="password"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:paddingRight="16dp"
        android:paddingLeft="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:onClick="clickPassword"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/selectImage_btn"
        android:text="select image"
        android:textSize="10sp"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="50dp"
        android:onClick="selectImage"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/signUp_enter_btn"
        android:text="sign up"
        android:textSize="10sp"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:onClick="signUp_enter"/>


</LinearLayout>